	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="5*"/>
		</Grid.RowDefinitions>
		<atom:Card Header="账号信息" SizeType="Large" Grid.Row="0" >
			<StackPanel Orientation="Vertical" Spacing="3">
				<atom:TextBlock>Card content</atom:TextBlock>
				<atom:TextBlock>Card content</atom:TextBlock>
				<atom:TextBlock>Card content</atom:TextBlock>
			</StackPanel>
		</atom:Card>
		<atom:Card Header="文件信息" SizeType="Large"  Grid.Row="1" >
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1*"/>
					<ColumnDefinition Width="1*"/>
				</Grid.ColumnDefinitions>
				<atom:DataGrid x:Name="BasicCaseGrid"
							   IsHideOnSinglePage="True"
							   Grid.Column="0"
							   ItemsSource="{Binding DataList}"
							   >
					<atom:DataGrid.Columns>
						<atom:DataGridTemplateColumn Header="名称">
							<atom:DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<atom:HyperLinkTextBlock Text="{Binding Name}" />
								</DataTemplate>
							</atom:DataGridTemplateColumn.CellTemplate>
						</atom:DataGridTemplateColumn>

						<atom:DataGridTemplateColumn Header="类型">
							<atom:DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<ItemsControl ItemsSource="{Binding Tags}">
										<ItemsControl.ItemsPanel>
											<ItemsPanelTemplate>
												<StackPanel Orientation="Horizontal" Spacing="5" />
											</ItemsPanelTemplate>
										</ItemsControl.ItemsPanel>
										<ItemsControl.ItemTemplate>
											<DataTemplate>
												<atom:Tag TagText="{Binding Name}" TagColor="{Binding Color}"></atom:Tag>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
								</DataTemplate>
							</atom:DataGridTemplateColumn.CellTemplate>
						</atom:DataGridTemplateColumn>
						<atom:DataGridTextColumn Header="大小" Binding="{Binding Size}" CanUserResize="True" />

						<atom:DataGridTemplateColumn Header="Action">
							<atom:DataGridTemplateColumn.CellTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal" Spacing="15">
										<atom:HyperLinkTextBlock Text="上传"
													 Command="{Binding DataContext.UploadLinkCommand,
													 ElementName=MainWindowControl}}"
													 CommandParameter="{Binding}" />
										<atom:HyperLinkTextBlock Text="删除" />
									</StackPanel>
								</DataTemplate>
							</atom:DataGridTemplateColumn.CellTemplate>
						</atom:DataGridTemplateColumn>
					</atom:DataGrid.Columns>
				</atom:DataGrid>
			</Grid>
		</atom:Card>
	</Grid>
</Window>
